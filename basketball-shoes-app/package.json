{
  "name": "shoe-store-microservices",
  "version": "1.0.0",
  "description": "TypeScript Microservices E-commerce Shoe Store with Feature Flags and Observability",
  "private": true,
  "workspaces": [
    "services/*",
    "frontend"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "docker-compose up",
    "clean": "npm run clean --workspaces && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
